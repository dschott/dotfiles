#!/usr/bin/env sh

if . sh-is-subshell; then
    echo "$0 must be sourced"
elif [ -z "${1}" ]; then
    >&2 echo "a path is required"
else
    esc_path="$(regex-esc ${1})"
    if ! echo "${PATH}" | grep -qe "${esc_path}[:$]"; then
        echo "ADDED: ${1}"
        export PATH="${1}:${PATH}"
    fi
fi
