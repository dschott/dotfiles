// Place your key bindings in this file to override the defaults
// https://code.visualstudio.com/docs/getstarted/keybindings
[
    { "key": "cmd+w", "command": "workbench.action.switchWindow", "when": "!editorIsOpen && !multipleEditorGroups" },
    { "key": "cmd+b", "command": "workbench.action.toggleSidebarVisibility", "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'" },
    { "key": "alt+cmd+up", "command": "workbench.action.toggleMaximizedPanel", "when": "terminalFocus" },
    { "key": "alt+cmd+down", "command": "workbench.action.toggleMaximizedPanel", "when": "terminalFocus" },
    { "key": "cmd+n", "command": "explorer.newFile", "when": "explorerViewletFocus" },
    { "key": "ctrl+`", "command": "workbench.action.terminal.focus"},
    { "key": "ctrl+`", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
    { "key": "cmd+w", "command": "workbench.action.terminal.toggleTerminal", "when": "terminalFocus"},
    { "key": "cmd+k cmd+k", "command": "workbench.action.terminal.kill", "when": "terminalFocus"},
    { "key": "cmd+k x", "command": "workbench.files.action.collapseExplorerFolders"},
    { "key": "cmd+k cmd+x", "command": "workbench.files.action.collapseExplorerFolders"},
    { "key": "cmd+k f", "command": "workbench.files.action.focusFilesExplorer"},
    { "key": "cmd+k a", "command": "workbench.files.action.showActiveFileInExplorer"},
    { "key": "cmd+k b", "command": "workbench.action.terminal.toggleTerminal"},
    { "key": "cmd+k cmd+b", "command": "workbench.action.terminal.toggleTerminal"},
    { "key": "cmd+k cmd+b", "command": "workbench.action.terminal.toggleTerminal"},
    { "key": "cmd+alt+right", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus"},
    { "key": "cmd+alt+left", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus"},
    { "key": "cmd+k n", "command": "merge-conflict.next"},
    { "key": "cmd+k p", "command": "merge-conflict.previous"},
]


