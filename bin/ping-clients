#!/usr/bin/env sh

if ! check-command vault; then
    exit 1
fi

environment="${1}"; shift

case "${environment}" in
"nonprod")
    vault_path="secret/graphroots/cgs/nonprod/ping"
    ;;
"prod")
    vault_path="secret/graphroots/cgs/prod/ping"
    ;;
*)
    echo >&2 "expected environment: nonprod | prod"
    exit 1
    ;;
esac

vault list "${vault_path}" | tail -n+3
