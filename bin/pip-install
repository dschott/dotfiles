#!/usr/bin/env bash

if ! check-command pip3; then
    exit 1
fi

failed=()
packages=$(cat "${DOTPATH}/etc/pip/Packages")
for package in ${packages}; do
    if ! pip3 install "${package}"; then
        failed+=("${package}")
    fi
done

if (( ${#failed[@]} > 0 )); then
    echo
    echo "Failed to install the following packages!"
    printf '\t%s\n' "${failed[*]}"
    exit 1
fi
