[core]
    excludesfile = ~/.gitignore

[push]
    default = simple

[url "git@github.com:"]
    insteadOf = "https://github.com/"

[include]
    path = ~/.gitconfig.user
    path = ~/.gitconfig.local

[rerere]
	enabled = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[alias]
    a = add
    aa = add -A
    b = branch
    f = fetch
    d = diff
    dc = diff --cached
    cl = clone
    p = pull
    rn = !git config "branch.$(git bn).remote"
    bn = !git rev-parse --abbrev-ref HEAD 2> /dev/null
    s = status -s -b
    st = stash
    r = reset
    c = commit
    cf = commit --fixup
    cm = commit -m
    co = checkout
    rb = rebase
    rbi = rebase -i
    rba = rebase --abort
    rbc = rebase --continue
    cp = cherry-pick
    t = tag
    td = tag -dg
    l = log --decorate=short --decorate-refs="refs/tags/*" --pretty=format:'%C(3)%h %C(250)%<(12,trunc)%aN %C(245)%<(18)%ad %C(11)%d %Creset%s' --date=format:'%Y-%m-%d %I:%M:%S %p'
    lr = l --relative-date
    sub = "!git submodule deinit ${@} --all --force && git submodule update ${@} --init"
    isrepo = "!git rev-parse ${@} --is-inside-work-tree > /dev/null 2>&1"
    ischanged = "! ! git diff-index ${@} --quiet HEAD --"
    rbdevelop = "!git fetch origin develop:develop  && git rebase -i --autosquash origin/develop"
    rbmaster = "!git fetch origin master:master && git rebase -i --autosquash origin/master"
    bdevelop = "!git fetch --update-head-ok origin develop:develop && git checkout -b ${1:?Branch name missing} develop && git push -u origin"
    bmaster = "!git fetch --update-head-ok origin master:master && git checkout -b ${1:?Branch name missing} master && git push -u origin"
    ldevelop = !git l develop..
    lmaster = !git l master..
