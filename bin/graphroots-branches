#!/usr/bin/env sh

branch_pattern="dschott/"
repos='
graphroots/genomics
graphroots/genomics-deploy
graphroots/product360-apis
graphroots/private-apis
graphroots/docs
graphroots/api-docs
graphroots/gokit
graphroots/srekit
'

for repo in $repos; do
  curl -s -u "$GITHUB_API_USERNAME:$GITHUB_API_TOKEN" https://github.platforms.engineering/api/v3/repos/$repo/branches |
  jq -r '.[].name' | grep "$branch_pattern" | xargs -n1 printf "https://github.platforms.engineering/$repo/tree/%s\n"
done
