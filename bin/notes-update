#!/usr/bin/env sh

! command-exists git && exit

if [ -d "${NOTESPATH}" ]; then
    if git-is-repo "${NOTESPATH}"; then
        if git -C "${NOTESPATH}" pull --ff-only; then
            git -C "${NOTESPATH}" add .
            git -C "${NOTESPATH}" commit -m "more notes"
            git -C "${NOTESPATH}" push
        fi
    fi
fi
